<!--[form:course]-->
<p><label for="institution_name">Institution Name</label><br/>
<%= select("course", "institutions_id", Institution.all.collect{ |c| [ c.name, c.id] }) %></p>

<p><label for="course_name">Course Name</label><br/>
<%= text_field 'course', 'name'  %></p>

<p><label for="course_directory_path">Course Directory</label> (Mandatory field. No space or special chars.)
  <img src="/assets/info.png" title='- DO NOT change this filed for an on-going course. This may cause lost of student submitted file.'>
<br/>
<%= text_field 'course', 'directory_path'  %></p>
<p><label for="course_info">Course Information</label><br/>
<%= text_field 'course', 'info'  %></p>
<p><label for="language">Default Language:</label><br/>
  <% if(!@course.nil?)
       if (@course.locale == "hi_IN")
         @hindi_locale = true
       else
         @en_locale = true
       end
     else
       @en_locale = true
     end %>

  <%= select('course','locale', options_for_select([
                                                           [ "English", "en", :selected => @en_locale == true ],
                                                           ["Hindi", "hi_IN", :selected => @hindi_locale == true ]
                                                        ])) %></p>

